FROM ubuntu:20.04

#by CSL
RUN     sed -i 's/archive.ubuntu.com/mirror.kakao.com/g' /etc/apt/sources.list
ARG     DEBIAN_FRONTEND=noninteractive
RUN     apt-get update
RUN  	apt-get -y install --no-install-recommends \
        apt-utils \
        libmysqlclient-dev \
        libmysql++-dev \
        make \
        flex \
        gcc \
        g++ \
        iptables \
        python \
        python3 \
	fp-compiler \
	busybox \
	dos2unix \
        openjdk-14-jdk \
	subversion \
        libmono-corlib4.5-cil \
        mono-devel \
	wget \
        zip \
        unzip \
        sqlite3

RUN     useradd -m -u 1536 judge


#by CSL
#RUN    cd /home/judge/ && \ 
#	wget dl.hustoj.com/hustoj.tar.gz && \
#       tar xzf hustoj.tar.gz 
RUN     cd /home/judge/
RUN     wget raw.githubusercontent.com/melongist/CSL/master/HUSTOJ/hustoj210626.zip 
RUN     unzip hustoj210626.zip -d /home/judge/
RUN     rm hustoj210626.zip


#Github update
#RUN	svn up /home/judge/src 
RUN     cd /home/judge/src/core/ && \
	bash make.sh 


